#0i0 i3stats

general {
  colors = true
  color_good = "#BBBBBB"
  color_bad = "#CC1616"
  color_degraded = "#55858E"
  interval = 2
}

order += "cpu_usage"
order += "volume master"
order += "wireless wlp62s0"
order += "tztime local"

volume master {
  device = "default"
  mixer = "Master"
  mixer_idx = 0
  format = "♪ %volume"
}

cpu_usage {
  format = "CPU %usage"
}

wireless wlp62s0 {
  format_up = " WiFi:(%quality at %essid) %ip"
  format_down = "☡ WiFi"
}

tztime local {
  format = " %m/%d %H:%M"
}